@model IEnumerable<HuylebronVilla.Domain.Entities.Villa>
   
<div class="card border-0 shadow-sm p-4">
    <div class="card-header bg-success bg-gradient text-white text-center py-3">
        <h2 class="mb-0">Villa List</h2>
    </div>
    <div class="card-body p-4">
        <div class="row mb-3">
            <div class="col-12 text-end">
                <a href="#" class="btn btn-success">
                    <i class="bi bi-plus-circle-dotted me-2"></i>Create New Villa
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Sqft</th>
                        <th>Occupancy</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.Price</td>
                            <td>@obj.Sqft</td>
                            <td>@obj.Occupancy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
