@model IEnumerable<HuylebronVilla.Domain.Entities.Villa>

<div class="card border-0 shadow-lg rounded-4">
    <div class="card-header bg-gradient text-white text-center py-4" style="background: linear-gradient(135deg, #28a745, #218838);">
        <div class="col-12 text-center">
            <h2 class="text-dark py-2">danh sách biệt thự </h2>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row mb-3">
            <div class="col-12 text-end">
                <a asp-controller="Villa" asp-action="Create" class="btn btn-lg btn-success shadow-sm px-4 py-2 rounded-pill">
                    <i class="bi bi-plus-circle-dotted me-2"></i> thêm biệt thự mới 
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle text-center">
                <thead class="table-success text-dark">
                <tr>
                    <th class="py-3">🏠 tên</th>
                    <th class="py-3">💲 giá cả </th>
                    <th class="py-3">📏 Sqft(diện tích)</th>
                    <th class="py-3">👥 sức chứa </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model)
                {
                    <tr class="border-bottom">
                        <td class="py-3">@obj.Name</td>
                        <td class="py-3">$@obj.Price.ToString("N0")</td>
                        <td class="py-3">@obj.Sqft.ToString("N0") ft²</td>
                        <td class="py-3">@obj.Occupancy</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>